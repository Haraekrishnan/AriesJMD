rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to the damage-reports folder
    match /damage-reports/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to read and write to their own avatar folder
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to their own signature folder
    match /signatures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
